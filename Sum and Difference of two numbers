#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main()
{
	int a,b,sum,sub;
    float c,d, sumf,subf,f;

    scanf("%d %d",&a ,&b );
      scanf("%f %f",&c ,&d );

      sum=a+b;
      sub=a-b;

      sumf=c+d;
      subf=c-d;    

      printf("%d %d",sum ,sub );
      printf("\n %d %d",sumf ,subf );
 
    
    
    return 0;
}
